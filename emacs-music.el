(defconst music-player-command "cvlc --play-and-exit ")
(defconst music-player-kill-command "killall vlc")

(defun music-url(filename)
  (interactive "sWhat to play?: ")
  (call-process-shell-command (concat music-player-command filename) nil 0)
)
(defun music-file(filename)
  (interactive "fWhat to Play:")
  (call-process-shell-command (concat music-player-command (replace-regexp-in-string " " "\\\\ " filename) "") nil 0)
)
(defun music-dir(filename)
  (interactive "fWhat to Play:")
  (call-process-shell-command (concat music-player-command (replace-regexp-in-string " " "\\\\ " filename) "/*") nil 0)
)
(defun nomusic()
  (interactive)
  (call-process-shell-command music-player-kill-command nil 0)
)
(defun gimmeradio()
  (interactive)
  (call-process-shell-command (concat music-player-command "https://gimme-stream.s3-us-west-1.amazonaws.com/128k/gimme1_aac_128.m3u8") nil 0)
)
(defun ultraradio()
  (interactive)
  (call-process-shell-command (concat music-player-command "http://ultra128.streamr.ru") nil 0)
)
(defun triplemradio()
  (interactive)
  (call-process-shell-command (concat music-player-command "rtmp://wzvic.scahw.com.au/live/3mmm_128.stream") nil 0)
)

(defun volume-up()
  (interactive)
  (shell-command "amixer -q sset Master 5%+")
)
(defun volume-down()
  (interactive)
  (shell-command "amixer -q sset Master 5%-")
)
(defun volume-set(num)
  (interactive "sVolume:")
  (shell-command (concat "amixer -q sset Master " num "%"))
)

(global-set-key (kbd "C-c +") 'volume-up)
(global-set-key (kbd "C-c -") 'volume-down)

(provide 'emacs-music)
